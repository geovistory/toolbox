{ // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "runtimeExecutable": null,
      "envFile": "${workspaceFolder}/.env",
      "restart": false,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App with Mock",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.dev.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "runtimeExecutable": null,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DB_ENV": "test",
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch App:watch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "envFile": "${workspaceFolder}/.env",
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--timeout",
        "5000",
        "--colors",
        "'dist/__tests__/**/*.js'",
        "--grep",
        "/^RamList/"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DB_ENV": "test",
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Tests:watch",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--timeout",
        "20000",
        "--colors",
        "'dist/__tests__/**/*.js'",
        "--grep",
        "/WarEntityPreviewController.*test the stream/"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "restart": true,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DB_ENV": "test",
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Warehouse (dev)",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/forever",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/warehouse.dev.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "restart": false,
      "outputCapture": "std",
      "envFile": "${workspaceFolder}/.env",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Bucket Test",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dev.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "restart": false,
      "outputCapture": "std",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Warehouse Tests",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "program": "${workspaceRoot}/node_modules/.bin/mocha",
      "stopOnEntry": false,
      "args": [
        "--timeout",
        "20000",
        "--colors",
        "'dist/__tests__/**/warehouse/**/*.js'",
        "--grep",
        "/PEntityService/"
        // "/IndexDB.*/"
      ],
      "cwd": "${workspaceRoot}",
      "restart": false,
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DB_ENV": "test",
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}
