{ // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Launch App:watch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "restart": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--timeout",
        "4000",
        "--colors",
        "'dist/__tests__/**/*.js'",
        // "--grep",
        // "/PingController.*/"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": {
        "NODE_ENV": "testing",
        "NO_LOGS": "true"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "name": "Launch Tests:watch",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "--timeout",
        "4000",
        "--colors",
        "'dist/__tests__/**/*.js'",
        // "--grep",
        // "/WarEntityPreviewController.*/"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "restart": true,
      "env": {
        "NODE_ENV": "testing",
        "NO_LOGS": "true"
      },
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}
