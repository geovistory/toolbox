{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES6",
    "types": [],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "module": "commonjs",
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "exclude": [
    "../node_modules",
    "**/*.d.ts",
    "**/typegen.ts"
  ]
}
