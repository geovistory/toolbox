{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": [],
    "typeRoots": [
      "../node_modules/@types"
    ],
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "files": [
    "src/query/query-filter.schema.json"
  ],
  "include": [
    "**/*.schema.json"
  ],
  "exclude": [
    "../node_modules",
    "**/*.d.ts",
    "**/typegen.ts"
  ]
}
