{
  "name": "DfhClass",
  "plural": "DfhClasses",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "data_for_history",
      "table": "v_class"
    }
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "pk_class": {
      "type": "number",
      "id": true,
      "generated": true
    },
    "identifier_in_namespace": {
      "type": "string"
    },
    "basic_type": {
      "type": "number"
    },
    "profiles": {
      "type": [
        "object"
      ]
    }
  },
  "validations": [],
  "relations": {
    "proj_rels": {
      "type": "hasMany",
      "model": "ProDfhClassProjRel",
      "primaryKey": "pk_class",
      "foreignKey": "fk_class"
    },
    "class_field_configs": {
      "type": "hasMany",
      "model": "ProClassFieldConfig",
      "foreignKey": "fk_class_for_class_field"
    },
    "class_fields": {
      "type": "hasMany",
      "model": "SysClassField",
      "foreignKey": "fk_class_for_class_field",
      "through": "ProClassFieldConfig",
      "keyThrough": "fk_class_field"
    },
    "persistent_items": {
      "type": "hasMany",
      "model": "InfPersistentItem",
      "foreignKey": "fk_class",
      "primaryKey": "pk_class"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "find",
        "findById"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "project_member",
      "permission": "ALLOW",
      "property": [
        "ofProject"
      ]
    }
  ],
  "methods": {
    "ofProject": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": false,
          "description": "Project pk",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": [
          "DfhClass"
        ],
        "root": true
      },
      "description": "Get all classes that are selected by at least one of the profiles used by the given project.",
      "http": {
        "path": "/of-project",
        "verb": "get"
      }
    }
  }
}
