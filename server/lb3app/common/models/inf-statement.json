{
  "name": "InfStatement",
  "base": "InfEntity",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "information",
      "table": "v_statement"
    }
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "fk_subject_info": {
      "type": "number",
      "default": 0
    },
    "fk_subject_data": {
      "type": "number",
      "default": 0
    },
    "fk_subject_tables_cell": {
      "type": "number",
      "default": 0
    },
    "fk_subject_tables_row": {
      "type": "number",
      "default": 0
    },
    "fk_property": {
      "type": "number",
      "default": 0
    },
    "fk_property_of_property": {
      "type": "number",
      "default": 0
    },
    "fk_object_info": {
      "type": "number",
      "default": 0
    },
    "fk_object_data": {
      "type": "number",
      "default": 0
    },
    "fk_object_tables_cell": {
      "type": "number",
      "default": 0
    },
    "fk_object_tables_row": {
      "type": "number",
      "default": 0
    },
    "is_in_project_count": {
      "type": "number",
      "required": false
    },
    "is_standard_in_project_count": {
      "type": "number",
      "required": false
    },
    "community_favorite_calendar": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {

    "subject_digital": {
      "type": "belongsTo",
      "model": "DatDigital",
      "foreignKey": "fk_subject_data",
      "primaryKey": "pk_entity"
    },
    "subject_chunk": {
      "type": "belongsTo",
      "model": "DatChunk",
      "foreignKey": "fk_subject_data",
      "primaryKey": "pk_entity"
    },
    "subject_statement": {
      "type": "belongsTo",
      "model": "InfStatement",
      "foreignKey": "fk_subject_info",
      "primaryKey": "pk_entity"
    },
    "object_appellation": {
      "type": "belongsTo",
      "model": "InfAppellation",
      "foreignKey": "fk_object_info",
      "primaryKey": "pk_entity"
    },
    "object_time_primitive": {
      "type": "belongsTo",
      "model": "InfTimePrimitive",
      "foreignKey": "fk_object_info",
      "primaryKey": "pk_entity"
    },
    "object_language": {
      "type": "belongsTo",
      "model": "InfLanguage",
      "foreignKey": "fk_object_info",
      "primaryKey": "pk_entity"
    },
    "object_lang_string": {
      "type": "belongsTo",
      "model": "InfLangString",
      "foreignKey": "fk_object_info",
      "primaryKey": "pk_entity"
    },
    "object_place": {
      "type": "belongsTo",
      "model": "InfPlace",
      "foreignKey": "fk_object_info",
      "primaryKey": "pk_entity"
    },
    "object_chunk": {
      "type": "belongsTo",
      "model": "DatChunk",
      "foreignKey": "fk_object_data",
      "primaryKey": "pk_entity"
    },
    "object_dimension": {
      "type": "belongsTo",
      "model": "InfDimension",
      "foreignKey": "fk_object_info",
      "primaryKey": "pk_entity"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "queryByParams"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "project_member",
      "permission": "ALLOW",
      "property": [
        "sourcesAndDigitalsOfEntity",
        "queryByParams"
      ]
    }
  ],
  "methods": {
    "sourcesAndDigitalsOfEntity": {
      "accepts": [
        {
          "arg": "ofProject",
          "type": "boolean",
          "required": true,
          "description": "if true, finds project version. if false, finds repo version.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkProject",
          "type": "number",
          "required": false,
          "description": "Primary Key of the Project.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkEntity",
          "type": "number",
          "required": false,
          "description": "Primary Key of the entity for which the sources links are needed.",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": [
          "object"
        ],
        "root": true
      },
      "description": "Get an nested object of statement with everything needed to display the links made from an entity towards sources and digitals.",
      "http": {
        "path": "/sources-and-digitals-of-entity",
        "verb": "get"
      }
    },
    "queryByParams": {
      "accepts": [
        {
          "arg": "ofProject",
          "type": "boolean",
          "required": true,
          "description": "if true, finds project version. if false, finds repo version.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkProject",
          "type": "number",
          "required": false,
          "description": "Primary Key of the Project. If provided and ofProject=false, makes a left join with project",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkEntity",
          "type": "number",
          "required": false,
          "description": "Primary Key of the statement (pk_entity)",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkInfoRange",
          "type": "number",
          "required": false,
          "description": "Foreign Key of the statement pointing to the range entity (fk_object_info)",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkInfoDomain",
          "type": "number",
          "required": false,
          "description": "Foreign Key of the statement pointing to the domain entity (fk_subject_info)",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkProperty",
          "type": "number",
          "required": false,
          "description": "Foreign Key of the statement pointing to the property (fk_property)",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": [
          "InfStatement"
        ],
        "root": true
      },
      "description": "Find statements by params.",
      "http": {
        "path": "/find-by-params",
        "verb": "get"
      }
    }
  }
}
