{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots" : [
      "./src/typings",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "cesium",
      "geodesy"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
