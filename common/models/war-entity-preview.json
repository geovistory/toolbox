{
  "name": "WarEntityPreview",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "war",
      "table": "entity_preview"
    }
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "pk_entity": {
      "id": true,
      "type": "number"
    },
    "fk_project": {
      "type": "number"
    },
    "fk_class": {
      "type": "number"
    },
    "class_label": {
      "type": "string"
    },
    "entity_label": {
      "type": "string"
    },
    "entity_type": {
      "type": "string"
    },
    "type_label": {
      "type": "string"
    },
    "fk_type": {
      "type": "number"
    },
    "time_span": {
      "type": "object"
    },
    "first_second": {
      "type": "number"
    },
    "last_second": {
      "type": "number"
    },
    "tmsp_last_modification": {
      "type": "text"
    }
  },
  "relations": {
    "te_roles": {
      "type": "hasMany",
      "model": "InfRole",
      "foreignKey": "fk_temporal_entity",
      "primaryKey": "pk_entity"
    },
    "pi_roles": {
      "type": "hasMany",
      "model": "InfRole",
      "foreignKey": "fk_entity",
      "primaryKey": "pk_entity"
    },
    "text_properties": {
      "type": "hasMany",
      "model": "InfTextProperty",
      "foreignKey": "fk_concerned_entity",
      "primaryKey": "pk_entity"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "project_member",
      "permission": "ALLOW",
      "property": [
        "search",
        "searchExisting",
        "searchExistingWithRelatedStatement",
        "paginatedListByPks",
        "paginatedList"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "system_admin",
      "permission": "ALLOW",
      "property": [
        "createAll"
      ]
    }
  ],
  "methods": {
    "search": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": false,
          "description": "pkProject, if none provided, searches in repo",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "searchString",
          "type": "string",
          "required": false,
          "description": "Search String",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkClasses",
          "type": "array",
          "required": false,
          "description": "Classes for which the search will be performed.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "entityType",
          "type": "string",
          "required": false,
          "description": "Type of Entity: 'teEn' or 'peIt'.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "limit",
          "type": "number",
          "required": false,
          "description": "Max. number of results per page [default=10; max=200]",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "page",
          "type": "number",
          "required": true,
          "description": "Page of pagination",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": "object",
        "root": true
      },
      "description": "Find data unit previews.",
      "http": {
        "path": "/search",
        "verb": "get"
      }
    },
    "searchExisting": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": true,
          "description": "pkProject",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "searchString",
          "type": "string",
          "required": false,
          "description": "Search String",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkClasses",
          "type": "array",
          "required": false,
          "description": "Classes for which the search will be performed.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "entityType",
          "type": "string",
          "required": false,
          "description": "Type of Entity: 'teEn' or 'peIt'.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "limit",
          "type": "number",
          "required": false,
          "description": "Max. number of results per page [default=10; max=200]",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "page",
          "type": "number",
          "required": true,
          "description": "Page of pagination",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": "object",
        "root": true
      },
      "description": "Find data unit previews, while entities in provided project have priority over repo versions.",
      "http": {
        "path": "/search-existing",
        "verb": "get"
      }
    },
    "searchExistingWithRelatedStatement": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": true,
          "description": "pkProject",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "searchString",
          "type": "string",
          "required": false,
          "description": "Search String",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkClasses",
          "type": "array",
          "required": false,
          "description": "Classes for which the search will be performed.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "entityType",
          "type": "string",
          "required": false,
          "description": "Type of Entity: 'teEn' or 'peIt'.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "limit",
          "type": "number",
          "required": false,
          "description": "Max. number of results per page [default=10; max=200]",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "page",
          "type": "number",
          "required": true,
          "description": "Page of pagination",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "relatedStatement",
          "type": "object",
          "required": true,
          "description": "Definition about how to join related statements",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": "object",
        "root": true
      },
      "description": "Find entity previews with left joined statement.",
      "http": {
        "path": "/search-existing-with-related-statement",
        "verb": "get"
      }
    },
    "createAll": {
      "accepts": [],
      "returns": {
        "arg": "data",
        "type": "string",
        "root": true
      },
      "description": "Recreate all entity previews. This may be useful after deployment on a fresh db.",
      "http": {
        "path": "/create-all",
        "verb": "get"
      }
    },
    "paginatedListByPks": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": true,
          "description": "pkProject, if none provided, searches in repo",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkEntities",
          "type": [
            "number"
          ],
          "required": true,
          "description": "Array of pkEntities",
          "http": {
            "source": "body"
          }
        },
        {
          "arg": "limit",
          "type": "number",
          "required": true,
          "description": "Max. number of results per page [default=10; max=200]",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "offset",
          "type": "number",
          "required": true,
          "description": "Offset",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": "object",
        "root": true
      },
      "description": "Gets ordered and paginated list of entity previews for given pkEntities.",
      "http": {
        "path": "/paginated-list-by-pks",
        "verb": "put"
      }
    }
  }
}
