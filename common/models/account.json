{
  "name": "Account",
  "base": "User",
  "idInjection": true,
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "id": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "projects": {
      "type": "hasMany",
      "model": "Project",
      "foreignKey": "account_id",
      "keyThrough": "fk_project",
      "through": "ProjectAccountAssociation"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "listProjects",
        "__create__projects",
        "register"
      ]
    }  
  ],
  "methods": {
    "listProjects": {
      "accepts": {
        "arg": "accountId",
        "type": "number",
        "required": true,
        "http": {
          "source": "query"
        }
      },
      "returns": {
        "arg": "account",
        "type": [
          "Account"
        ],
        "root": true
      },
      "description": "Get a list of all projects associated with this account.",
      "http": {
        "path": "/list-projects",
        "verb": "get"
      }
    },
    "register": {
      "accepts": [
        {
          "arg": "data",
          "type": "Account",
          "required": true,
          "description": "Model instance data",
          "http": {
            "source": "body"
          }
        },
        {
          "arg": "redirectUrl",
          "type": "string",
          "required": true,
          "description": "Redirect url for link in email verification email.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "ctx",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": "Account",
        "root": true
      },
      "description": "Register for a new Account.",
      "http": {
        "path": "/register",
        "verb": "post"
      }
    }
  }
}
