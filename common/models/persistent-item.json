{
  "name": "PersistentItem",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "information",
      "table": "persistent_item"
    }
  },
  "mixins": {
    "SetupRemoteMethods": {
      "disableAllExcept": []
    }
  },
  "hidden": [],
  "properties": {
    "pk_persistent_item": {
      "id": true,
      "type": "number"
    },
    "pk_entity": {
      "type": "number",
      "generated": true
    },
    "notes": {
      "type": "string"
    },
    "fk_class": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "projects": {
      "type": "hasMany",
      "model": "Project",
      "foreignKey": "fk_entity",
      "primaryKey": "pk_entity",
      "keyThrough": "fk_project",
      "through": "EntityProjectRel"
    },
    "roles": {
      "type": "hasMany",
      "model": "InformationRole",
      "foreignKey": "fk_entity",
      "primaryKey": "pk_entity"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "createItem",
        "find",
        "findById"
      ]
    }
  ],
  "methods": {
    "createItem": {
      "accepts": [
        {
          "arg": "projectId",
          "type": "number",
          "required": true,
          "description": "Id of project to associate the persistent item with.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "data",
          "type": "PersistentItem",
          "required": true,
          "description": "Data used to create the new persistent item",
          "http": {
            "source": "body"
          }
        }
      ],
      "returns": {
        "arg": "success",
        "type": "boolean",
        "root": true
      },
      "http": {
        "path": "/create",
        "verb": "post"
      }
    }
  }
}
