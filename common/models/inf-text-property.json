{
  "name": "InfTextProperty",
  "plural": "InfTextProperties",
  "base": "InfEntity",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "information",
      "table": "v_text_property"
    }
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "fk_class_field": {
      "type": "number",
      "required": true
    },
    "fk_concerned_entity": {
      "type": "number",
      "required": true
    },
    "fk_language": {
      "type": "number",
      "required": true
    },
    "text_property_quill_doc": {
      "type": "object",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "persistent_item": {
      "type": "belongsTo",
      "model": "InfPersistentItem",
      "foreignKey": "fk_concerned_entity",
      "primaryKey": "pk_entity"
    },
    "temporal_entity": {
      "type": "belongsTo",
      "model": "InfTemporalEntity",
      "foreignKey": "fk_concerned_entity",
      "primaryKey": "pk_entity"
    },
    "language": {
      "type": "belongsTo",
      "model": "InfLanguage",
      "foreignKey": "fk_language",
      "primaryKey": "pk_entity"
    },
    "class_field": {
      "type": "belongsTo",
      "model": "ComClassField",
      "foreignKey": "fk_class_field",
      "primaryKey": "pk_entity"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "project_member",
      "permission": "ALLOW",
      "property": [
        "findOrCreateInfTextProperty"
      ]
    }
  ],
  "methods": {
    "findOrCreateInfTextProperty": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": true,
          "description": "Pk of the project",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "data",
          "type": "InfTextProperty",
          "required": true,
          "description": "data",
          "http": {
            "source": "body"
          }
        },
        {
          "arg": "ctx",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": "InfTextProperty",
        "root": true
      },
      "description": "Find or create a InfTextProperty and update the project relation if needed.",
      "http": {
        "path": "/findOrCreate",
        "verb": "post"
      }
    }
  }
}
