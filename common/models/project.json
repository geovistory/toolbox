{
  "name": "Project",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "FireLoop": true,
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "accounts": {
      "type": "hasMany",
      "model": "Account",
      "foreignKey": "account_id",
      "through": "ProjectAccountAssociation"
    },
    "default_language": {
      "type": "belongsTo",
      "model": "Language",
      "foreignKey": "default_language_id"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": ["create", "find", "addEntity", "listPersistentItems"]
    }
  ],
  "methods": {
    "addEntity": {
      "description": "Adds an exisiting entity (PeIt, Appe, â€¦) to the project.",
      "accepts": [
        {
          "arg": "projectId",
          "type": "number",
          "required": true,
          "description": "Project Id",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "entitySemkey",
          "type": "string",
          "required": true,
          "description": "Semkey of entity",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "success",
        "type": [ "boolean" ],
        "root": true
      },
      "http": {
        "path": "/add-entity",
        "verb": "post"
      }
    },
    "listPersistentItems": {
      "description": "Find persistent items of a project.",
      "accepts": [
        {
          "arg": "projectId",
          "type": "number",
          "required": true,
          "description": "Project id",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "success",
        "type": [
          "PersistentItem"
        ],
        "root": true
      },
      "http": {
        "path": "/persistent-items",
        "verb": "get"
      }
    }
  }
}
