{
  "name": "Project",
  "base": "PersistedModel",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "commons",
      "table": "project"
    }
  },
  "mixins": {
    "FireLoop": true,
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "notes": {
      "type": "string",
      "required": true
    },
    "pk_project": {
      "type": "number",
      "id": true,
      "generated": true
    },
    "pk_entity": {
      "type": "number",
      "generated": true
    }
  },
  "validations": [],
  "relations": {
    "accounts": {
      "type": "hasMany",
      "model": "Account",
      "foreignKey": "fk_project",
      "keyThrough": "account_id",
      "through": "ProjectAccountAssociation"
    },
    "default_language": {
      "type": "belongsTo",
      "model": "Language",
      "foreignKey": "fk_language"
    },
    "labels": {
      "type": "hasMany",
      "model": "CommonsLabel",
      "foreignKey": "fk_entity",
      "primaryKey": "pk_entity"
    },
    "text_properties": {
      "type": "hasMany",
      "model": "CommonsTextProperty",
      "foreignKey": "fk_entity",
      "primaryKey": "pk_entity"
    },
    "persistent_items": {
      "type": "hasMany",
      "model": "PersistentItem",
      "foreignKey": "fk_project",
      "keyThrough": "fk_entity",
      "through": "EntityProjectRel"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "createWithLabelAndDescription",
        "find",
        "addEntity"
      ]
    }
  ],
  "methods": {
    "createWithLabelAndDescription": {
      "accepts": [
        {
          "arg": "accountId",
          "type": "number",
          "required": true,
          "description": "Id of account to associate the persistent item with.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkLanguage",
          "type": "string",
          "required": true,
          "description": "Default language of the project, language of the label and the text property.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "label",
          "type": "string",
          "required": true,
          "description": "Label of the project.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "textProperty",
          "type": "string",
          "required": false,
          "description": "Description of the project.",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "success",
        "type": [
          "boolean"
        ],
        "root": true
      },
      "description": "Create a new project with a label and a description.",
      "http": {
        "path": "/create-with-label-and-description",
        "verb": "post"
      }
    },
    "addEntity": {
      "accepts": [
        {
          "arg": "projectId",
          "type": "number",
          "required": true,
          "description": "Project Id",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "entitySemkey",
          "type": "string",
          "required": true,
          "description": "Semkey of entity",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "success",
        "type": [
          "boolean"
        ],
        "root": true
      },
      "description": "Adds an exisiting entity (PeIt, Appe, â€¦) to the project.",
      "http": {
        "path": "/add-entity",
        "verb": "post"
      }
    }
  }
}
