{
  "name": "ProAnalysis",
  "base": "ProEntity",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "projects",
      "table": "analysis"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "analysis_definition": {
      "type": "object",
      "required": true
    },
    "fk_project": {
      "type": "number",
      "required": true
    },
    "fk_analysis_type": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "project": {
      "type": "belongsTo",
      "model": "ProProject",
      "foreignKey": "fk_project",
      "primaryKey": "pk_entity"
    },
    "account": {
      "type": "belongsTo",
      "model": "PubAccount",
      "foreignKey": "fk_last_modifier",
      "primaryKey": "id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "project_member",
      "permission": "ALLOW",
      "property": [
        "run",
        "findById",
        "create",
        "patchAttributes"
      ]
    }
  ],
  "methods": {
    "run": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": true,
          "description": "Pk of the project.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "analysisType",
          "type": "number",
          "required": true,
          "description": "Pk of the analysis type.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "analysisDefinition",
          "type": "object",
          "required": false,
          "description": "analysisDefinition object.",
          "http": {
            "source": "body"
          }
        },
        {
          "arg": "ctx",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": [
          "ProClassFieldConfig"
        ],
        "root": true
      },
      "description": "Run analysis",
      "http": {
        "path": "/run",
        "verb": "post"
      }
    }
  }
}
