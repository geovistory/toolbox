{
  "name": "PubAccount",
  "base": "User",
  "idInjection": true,
  "postgresql": {
    "schema": "public",
    "table": "account"
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "id": {
      "type": "number"
    }
  },
  "validations": [],
  "relations": {
    "projects": {
      "type": "hasMany",
      "model": "ComProject",
      "foreignKey": "account_id",
      "keyThrough": "fk_project",
      "through": "PubAccountProjectRel"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "listProjects",
        "getRoles"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "system_admin",
      "permission": "ALLOW",
      "property": [
        "find",
        "withRolesAndProjects"
      ]
    }
  ],
  "methods": {
    "getRoles": {
      "accepts": {
        "arg": "accountId",
        "type": "number",
        "required": true,
        "http": {
          "source": "query"
        }
      },
      "returns": {
        "arg": "roles",
        "type": [
          "Role"
        ],
        "root": true
      },
      "description": "Get Roles of the Account",
      "http": {
        "path": "/get-roles",
        "verb": "get"
      }
    },
    "listProjects": {
      "accepts": {
        "arg": "accountId",
        "type": "number",
        "required": true,
        "http": {
          "source": "query"
        }
      },
      "returns": {
        "arg": "account",
        "type": [
          "PubAccount"
        ],
        "root": true
      },
      "description": "Get a list of all projects associated with this account.",
      "http": {
        "path": "/list-projects",
        "verb": "get"
      }
    },
    "withRolesAndProjects": {
      "returns": {
        "arg": "accounts",
        "type": [
          "PubAccount"
        ],
        "root": true
      },
      "description": "Get all accounts with their project pks and their roles",
      "http": {
        "path": "/with-roles-and-projects",
        "verb": "get"
      }
    }
  }
}