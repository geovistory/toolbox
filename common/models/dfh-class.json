{
  "name": "DfhClass",
  "plural": "DfhClasses",
  "base": "DfhEntity",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "data_for_history",
      "table": "class"
    }
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": false,
      "disableAllExcept": []
    }
  },
  "properties": {
    "dfh_pk_class": {
      "type": "number",
      "id": true,
      "generated": true
    },
    "dfh_identifier_in_namespace": {
      "type": "string"
    },
    "dfh_standard_label": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "class_profile_view": {
      "type": "hasMany",
      "model": "DfhClassProfileView",
      "foreignKey": "dfh_fk_class",
      "options": {
        "nestRemoting": false
      }
    },
    "labels": {
      "type": "hasMany",
      "model": "DfhLabel",
      "foreignKey": "dfh_fk_class",
      "options": {
        "nestRemoting": false
      }
    },
    "text_properties": {
      "type": "hasMany",
      "model": "DfhTextProperty",
      "foreignKey": "dfh_fk_class"
    },
    "persistent_items": {
      "type": "hasMany",
      "model": "InfPersistentItem",
      "foreignKey": "fk_class",
      "primaryKey": "dfh_pk_class"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "find",
        "findById",
        "__get__labels",
        "__get__text_properties",
        "selectedPeItClassesOfProfile"
      ]
    }
  ],
  "methods": {
    "selectedPeItClassesOfProfile": {
      "accepts": [
        {
          "arg": "dfh_pk_profile",
          "type": "number",
          "required": true,
          "description": "Profile id",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": ["DfhClass"],
        "root": true
      },
      "description": "Get all classes that are selected by the profile of the specified primary-key.",
      "http": {
        "path": "/selected-pe-it-classes-of-profile",
        "verb": "get"
      }
    }
  }
}