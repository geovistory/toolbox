{
  "name": "ProVisual",
  "base": "ProEntity",
  "idInjection": false,
  "options": {
    "validateUpsert": true,
    "postgresql": {
      "schema": "projects",
      "table": "visual"
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": false
    },
    "visual": {
      "type": "object",
      "required": true
    },
    "fk_project": {
      "type": "number",
      "required": true
    },
    "fk_last_modifier": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "project": {
      "type": "belongsTo",
      "model": "ProProject",
      "foreignKey": "fk_project",
      "primaryKey": "pk_entity"
    },
    "account": {
      "type": "belongsTo",
      "model": "PubAccount",
      "foreignKey": "fk_last_modifier",
      "primaryKey": "id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "project_member",
      "permission": "ALLOW",
      "property": [  
        "create",
        "patchAttributes",
        "findPerIdAndVersionAndProject",
        "deleteById"
      ]
    }
  ],
  "methods": {
    "findPerIdAndVersionAndProject": {
      "accepts": [
        {
          "arg": "pkProject",
          "type": "number",
          "required": true,
          "description": "Pk of the project",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "pkEntity",
          "type": "number",
          "required": false,
          "description": "Pk of the visual",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "version",
          "type": "number",
          "required": false,
          "description": "Entity version",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "ctx",
          "type": "object",
          "http": {
            "source": "context"
          }
        }
      ],
      "returns": {
        "arg": "data",
        "type": [
          "ProVisual"
        ],
        "root": true
      },
      "description": "Find visuals of project, optionaly filtered by pk and version.",
      "http": {
        "path": "/find-per-id-and-project",
        "verb": "get"
      }
    }
  }
}